{
	"name": "sveltkit-starter",
	"version": "0.0.1",
	"author": {
		"name": "Navneet Sharma",
		"url": "https://navneetsharma.tech"
	},
	"description": "A sveltekit starter project with typescript, tailwindcss, postcss, husky, and storybook setup",
	"license": "MIT",
	"keywords": [
		"sveltekit",
		"typescript",
		"svelte"
	],
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"start": "svelte-kit start",
		"lint": "prettier --check ./src/**/*.{js,svelte,ts} ./*.{ts,cjs,js} && eslint ./src/**/*.{js,svelte,ts} --ignore-path .gitignore .",
		"lint:fix": "prettier --check ./src/**/*.{js,svelte,ts} ./*.{ts,cjs,js} && eslint ./src/**/*.{js,svelte,ts} --ignore-path .gitignore .",
		"format": "prettier --write ./src/**/*.{js,svelte,ts} ./*.{ts,cjs,js}",
		"eslint": "eslint ./src/**/*.{js,svelte,ts} --ignore-path .gitignore .",
		"http-serve": "yarn http-server ./build",
		"postinstall": "husky install",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"installConfig": {
		"pnp": true
	},
	"lint-staged": {
		"./src/**/*.{svelte,ts}": [
			"yarn lint:fix"
		],
		"./.{ts,cjs,js}": [
			"yarn lint:fix"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.13.15",
		"@mdx-js/react": "^1.6.22",
		"@storybook/addon-a11y": "^6.2.7",
		"@storybook/addon-actions": "^6.2.7",
		"@storybook/addon-cssresources": "^6.2.7",
		"@storybook/addon-docs": "^6.2.7",
		"@storybook/addon-essentials": "^6.2.7",
		"@storybook/addon-events": "^6.2.7",
		"@storybook/addon-graphql": "^6.2.7",
		"@storybook/addon-info": "^5.3.21",
		"@storybook/addon-knobs": "^6.2.7",
		"@storybook/addon-links": "^6.2.7",
		"@storybook/addon-notes": "^5.3.21",
		"@storybook/addon-postcss": "^2.0.0",
		"@storybook/addon-queryparams": "^6.2.7",
		"@storybook/addon-storyshots": "^6.2.7",
		"@storybook/addon-svelte-csf": "^1.0.0",
		"@storybook/addons": "^6.2.7",
		"@storybook/svelte": "^6.2.7",
		"@sveltejs/adapter-node": "next",
		"@sveltejs/adapter-static": "^1.0.0-next.0",
		"@sveltejs/kit": "next",
		"@typescript-eslint/eslint-plugin": "^4.21.0",
		"@typescript-eslint/parser": "^4.21.0",
		"autoprefixer": "^10.2.5",
		"babel-loader": "^8.2.2",
		"chromatic": "^5.7.1",
		"cssnano": "^4.1.10",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-svelte3": "^3.1.2",
		"http-server": "^0.12.3",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"postcss": "^8.2.9",
		"postcss-at-rules-variables": "^0.3.0",
		"postcss-cli": "^8.3.1",
		"postcss-import": "^14.0.1",
		"postcss-load-config": "^3.0.1",
		"postcss-mixins": "^7.0.3",
		"postcss-nested": "^5.0.5",
		"postcss-scss": "^3.0.5",
		"postcss-simple-vars": "^6.0.3",
		"prettier": "~2.2.1",
		"prettier-plugin-svelte": "^2.2.0",
		"sass": "^1.32.8",
		"storybook-addon-apollo-client": "^4.0.6",
		"svelte": "^3.37.0",
		"svelte-loader": "^3.1.0",
		"svelte-preprocess": "^4.7.0",
		"tailwindcss": "^2.1.1",
		"tslib": "^2.2.0",
		"typescript": "^4.2.4",
		"vite": "^2.1.5"
	},
	"type": "module"
}
